<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Seller rating</th>
    <th>Friendliness</th>
    <th>Helpfulness</th>
    <th>Email</th>
    <th>Renter rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.address %></td>
    <td><%= user.seller_rating %></td>
    <td><%= user.friendliness %></td>
    <td><%= user.helpfulness %></td>
    <td><%= user.email %></td>
    <td><%= user.renter_rating %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

