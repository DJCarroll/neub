<h1>Listing homes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Location</th>
    <th>Price</th>
    <th>Date</th>
    <th>Rating</th>
    <th>Condition</th>
    <th>Seller</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @homes.each do |home| %>
  <tr>
    <td><%= home.title %></td>
    <td><%= home.category %></td>
    <td><%= home.location %></td>
    <td><%= home.price %></td>
    <td><%= home.date %></td>
    <td><%= home.rating %></td>
    <td><%= home.condition %></td>
    <td><%= home.seller %></td>
    <td><%= home.description %></td>
    <td><%= link_to 'Show', home %></td>
    <td><%= link_to 'Edit', edit_home_path(home) %></td>
    <td><%= link_to 'Destroy', home, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

